<h2>Current Stock</h2>

<div class="table_container">
	<% @products.each do |product| %>
		<div class="product">
			<%= image_tag product.photo.url(:medium) %>
			<%= product.name %> <br>
			$<%= product.price/100.00 %> <br>
			<%= product.description %><br />
			<div class="add2"><a class= "add" >Add to Cart</a></div>
			<%= link_to ("add2"), "/shopping_cart/products/#{ product.id}", method: :post%>
		</div>
	<% end %>
</div>

<div class="clearfixer"></div>
